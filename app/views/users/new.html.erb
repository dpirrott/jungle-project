<h1>Signup!</h1>

  <% if @errors %>
    <% @errors.each do |error|  %>
      <p> <%= error %> </p>
    <% end %>
  <% end %>

<%= form_for :user, {url: '/users', method: 'post'} do |f| %>

  <div class="form-group">
    <label for="exampleInputEmail1">First name</label>
    <%= f.text_field :first_name, html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Last name</label>
    <%= f.text_field :last_name, html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <%= f.text_field :email, html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Password</label>
    <%= f.password_field :password, html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Confirm password</label>
    <%= f.password_field :password_confirmation, html: {class: 'form-control'} %>
  </div>
  <%= f.submit "Submit", html: {class: 'btn btn-default'} %>

<% end %>